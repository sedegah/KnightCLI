# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# ===== SUPABASE DATABASE =====
# Get these from: Supabase Dashboard -> Project Settings -> API
# For production, use the service_role key (has full access)
# For development/testing, you can use the anon key
SUPABASE_URL=https://yourproject.supabase.co
SUPABASE_KEY=your_anon_or_service_role_key_here

# Optional: Direct PostgreSQL connection (for migrations)
DATABASE_URL=postgresql://postgres:your_password@db.yourproject.supabase.co:5432/postgres

# Google Sheets Configuration (for questions)
# Option 1: Service account JSON file path (local development)
GOOGLE_SHEETS_CREDENTIALS=credentials.json
# Option 2: Service account JSON content (Render/cloud deployment)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
SPREADSHEET_ID=your_google_spreadsheet_id

# Admin Configuration (get your Telegram ID from @userinfobot)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Game Configuration
PRIZE_ROUND_MORNING_HOUR=9
PRIZE_ROUND_EVENING_HOUR=21
TIMEZONE=UTC
DAILY_REMINDER_HOUR=18

# User Limits
FREE_USER_HOURLY_LIMIT=20
SUBSCRIBER_HOURLY_LIMIT=40

# Point Rewards
FREE_AP_PER_CORRECT=5
SUBSCRIBER_AP_PER_CORRECT=8
FREE_PP_PER_CORRECT=10
SUBSCRIBER_PP_PER_CORRECT=15

# Subscription Pricing
MONTHLY_SUBSCRIPTION_PRICE_USD=4.99

# Server Configuration
PORT=8080
DEBUG=False
LOG_LEVEL=INFO

# Cache (for read-only mode fallback)
READONLY_USER_CACHE_PATH=user_cache.json
