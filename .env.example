# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# PostgreSQL Database (Render)
DATABASE_URL=postgresql://username:password@host/database

# SQLAlchemy Connection Pooling
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_POOL_PRE_PING=True

# Postgres Connection Keepalives
DB_CONNECT_TIMEOUT=10
DB_TCP_KEEPALIVES=True
DB_KEEPALIVES_IDLE=30
DB_KEEPALIVES_INTERVAL=10
DB_KEEPALIVES_COUNT=5

# Read-only mode persistence (set to a Render disk path to avoid resets)
READONLY_USER_CACHE_PATH=/var/data/knightcli_user_cache.json

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_generated_encryption_key_here

# Google Sheets Configuration (for questions only)
GOOGLE_SHEETS_CREDENTIALS=credentials.json
SPREADSHEET_ID=your_google_spreadsheet_id

# Admin Configuration (get your ID from @userinfobot)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Game Configuration
PRIZE_ROUND_MORNING_HOUR=9
PRIZE_ROUND_EVENING_HOUR=21
TIMEZONE=UTC

# Rate Limits
HOURLY_LIMIT=20
DAILY_REMINDER_HOUR=18

# Scoring (difficulty-based)
EASY_POINTS=5
MEDIUM_POINTS=7
HARD_POINTS=10

# Environment
DEBUG=False
LOG_LEVEL=INFO
