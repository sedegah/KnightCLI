{
  "name": "gnex-telegram-bot",
  "version": "2.0.0",
  "description": "G-NEX Competitive Quiz Platform - Cloudflare Workers Edition",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "test": "vitest",
    "db:init": "wrangler d1 execute gnex-db --file=./src/database/schema.sql",
    "db:migrate": "wrangler d1 migrations apply gnex-db"
