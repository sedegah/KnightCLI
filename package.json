  "keywords": [
    "telegram",
    "quiz",
    "cloudflare",
    "workers",
    "competitive",
    "gaming"
  ],
  "author": "G-NEX Team",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "wrangler": "^3.24.0",
    "vitest": "^1.2.0"
  }
}
